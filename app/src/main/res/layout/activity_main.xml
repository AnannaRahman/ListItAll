<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Intern DRC"
        app:theme="@style/ToolBarStyle">

    </android.support.v7.widget.Toolbar>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"

    android:layout_below="@id/toolBar"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/colorLightGrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="PG/Sample"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <View
            android:id="@+id/viewV"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtTitle"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray">

        </View>

        <LinearLayout
            android:id="@+id/lyspinner12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewV"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/spnProductGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff0000"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyspinner11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyspinner12"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/spnLiteratureList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff0000"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyspinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyspinner11"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/spnPhysicianList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff0000"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyspinner13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyspinner1"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/spnGift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff0000"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_tvAccompainedWIth"
            android:layout_below="@id/lyspinner13"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tvAccompainedWIth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Accompained With" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_tvRemarks"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name_tvAccompainedWIth"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tvRemarks"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:maxLines="100"
                android:hint="Remarks" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnSubmit"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:text="Submit" />
    </RelativeLayout>
</android.support.v7.widget.CardView>


</RelativeLayout>